<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Hello, <%= name %></h1>

<% if (successMsg.length > 0) { %>
  <div style="color: green;">
    <% successMsg.forEach(msg => { %>
      <p><%= msg %></p>
    <% }) %>
  </div>
<% } %>

<% if (errorMsg.length > 0) { %>
  <div style="color: red;">
    <% errorMsg.forEach(msg => { %>
      <p><%= msg %></p>
    <% }) %>
  </div>
<% } %>

</body>
</html>